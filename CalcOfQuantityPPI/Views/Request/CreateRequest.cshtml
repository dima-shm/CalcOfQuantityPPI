@model CalcOfQuantityPPI.ViewModels.Request.RequestViewModel
@{
    ViewBag.Title = "Офромление заявки";
}

<div class="container"
     style="padding: 0 20px 20px 20px;
    background-color: rgb(255,255,255);
    box-shadow: rgba(0,0,0,0.5) 0 5px 20px;
    border-radius:5px;">
    <div class="row" style="background-color:rgb(0, 140, 208); margin-left:-20px; margin-right:-20px; padding:10px;">
        <div class="col-md-12">
            <h2 style="color:white;">Оформление заявки</h2>
        </div>
    </div>
    <br />
    <div class="row">
        <form asp-action="CreateRequest" asp-controller="Request" method="post">
            <div class="col-md-4">
                @Html.Label("Выберите подразделение:")
                <br />
                @Html.DropDownList("ParentDepartment", new SelectList(Model.Departments.Where(p => p.ParentDepartment == null), "Id", "Name"), new { id = "parentDepartment", @class = "form-control" })
                <br />
                @Html.CheckBox("isUseSubsidiaryDepartment", new { id = "isUseSubsidiaryDepartment" })
                @Html.Label("Дочернее подразделение")
                <br />
                @Html.DropDownList("SubsidiaryDepartment", new SelectList(new[] { "" }), new { id = "subsidiaryDepartment", @class = "form-control", style = "display:none" })
                <br />
                <button type="submit" class="btn btn-primary">Отправить заявку</button>
            </div>
            <div class="col-md-8">
                <table id="professionsTabel" class="table table-striped"></table>
            </div>
        </form>
    </div>
</div>

@section scripts{
    <script type="text/javascript">

        $(function () {
            $('#subsidiaryDepartment').hide(0);
            $('#isUseSubsidiaryDepartment').prop('checked', false);
            updateProfessionsAndPPITable('#parentDepartment');
            updateSubsidiaryDepartmentList();
        });

        $('#parentDepartment').change(function () {
            updateSubsidiaryDepartmentList();
            $('#subsidiaryDepartment').hide(100);
            $('#isUseSubsidiaryDepartment').prop('checked', false);
        });

        $('#subsidiaryDepartment').change(function () {
            updateProfessionsAndPPITable('#subsidiaryDepartment');
        });

        $('#isUseSubsidiaryDepartment').click(function () {
            if ($('#isUseSubsidiaryDepartment').is(':checked')) {
                $('#subsidiaryDepartment').show(100);
                updateProfessionsAndPPITable('#subsidiaryDepartment');
            } else {
                $('#subsidiaryDepartment').hide(100);
                updateProfessionsAndPPITable('#parentDepartment');
            }
        });

        if ($('#isUseSubsidiaryDepartment').is(':checked')) {
                $('#subsidiaryDepartment').show(100);
                $('#subsidiaryDepartment').change(function () {
                    updateProfessionsAndPPITable('#subsidiaryDepartment');
                });
            } else {
                $('#subsidiaryDepartment').hide(100);
                $('#parentDepartment').change(function () {
                    updateProfessionsAndPPITable('#parentDepartment');
                });
        }

        function updateSubsidiaryDepartmentList() {
            var parentDepartmentId = $('#parentDepartment').val();
            $.ajax({
                success: function () {
                    $('#subsidiaryDepartment').load('@Url.Action("SubsidiaryDepartmentList", "Request")/' + parentDepartmentId);
                }
            });
        }

        function updateProfessionsAndPPITable(id) {
            var subsidiaryDepartmentId = $(id).val();
            $.ajax({
                success: function () {
                    $('#professionsTabel').load('@Url.Action("ProfessionsAndPPITable", "Request")/' + subsidiaryDepartmentId);
                }
            });
        }
    </script>
}