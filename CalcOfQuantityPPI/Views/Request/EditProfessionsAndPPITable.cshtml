@model CalcOfQuantityPPI.ViewModels.Request.EditRequestViewModel

<div class="panel panel-primary">
    <table id="professionsTabel" class="table table-hover">
        <thead style="background-color:steelblue; color:white">
            <tr>
                <th width="180">Профессия</th>
                <th width="70">Численность сотрудников</th>
                <th width="300"><center>Наименование средств индивидуальной защиты</center></th>
                <th width="70">Класс защиты</th>
                <th width="70">Количество на одного сотрудника</th>
                <th width="90">Всего</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.ProfessionViewModelList.Count; i++)
            {
                <tr>
                    <td width="180">
                        @Html.HiddenFor(model => Model.ProfessionViewModelList[i].ProfessionName)
                        @Model.ProfessionViewModelList[i].ProfessionName
                    </td>
                    <td>
                        <center>
                            @Html.TextBox("ProfessionViewModelList[" + i + "].EmployeesQuantity", Model.ProfessionViewModelList[i].EmployeesQuantity,
                                new { id = "employeesQuantity", type = "number", min = "0", max = "10000", @class = "form-control", style = "width:70px" })
                        </center>
                    </td>
                    <td colspan="4">
                        <table class="table table-hover">
                            <tbody>
                                @for (int j = 0; j < Model.ProfessionViewModelList[i].QuantityOfPPI.Length; j++)
                                {
                                    <tr>
                                        <td width="300">
                                            @Html.HiddenFor(model => Model.ProfessionViewModelList[i].QuantityOfPPI[j].PersonalProtectiveItemName)
                                            @Model.ProfessionViewModelList[i].QuantityOfPPI[j].PersonalProtectiveItemName
                                        </td>
                                        <td>
                                            @Html.HiddenFor(model => Model.ProfessionViewModelList[i].QuantityOfPPI[j].ProtectionClass)
                                            @Model.ProfessionViewModelList[i].QuantityOfPPI[j].ProtectionClass
                                        </td>
                                        <td>
                                            <center>
                                                @Html.TextBox("ProfessionViewModelList[" + i + "].QuantityOfPPI[" + j + "].QuantityForOneEmployee", Model.ProfessionViewModelList[i].QuantityOfPPI[j].QuantityForOneEmployee,
                                                    new { type = "number", min = "0", max = "10000", @class = "form-control", style = "width:70px" })
                                            </center>
                                        </td>
                                        <td>
                                            <center>
                                                @Html.TextBox("ProfessionViewModelList[" + i + "].QuantityOfPPI[" + j + "].TotalQuantity", Model.ProfessionViewModelList[i].QuantityOfPPI[j].TotalQuantity,
                                                    new { type = "number", min = "0", max = "10000", @class = "form-control", style = "width:70px" })
                                            </center>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<script>

</script>