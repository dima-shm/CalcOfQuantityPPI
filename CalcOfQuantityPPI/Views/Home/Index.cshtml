@{
    ViewBag.Title = "Главная";
}

<div class="container"
     style="padding: 0 20px 20px 20px;
     background-color: rgb(255,255,255);
     box-shadow: rgba(0,0,0,0.5) 0 5px 20px;
     border-radius:5px;
     min-height:800px">
    <div class="row" style="background-color:rgb(0, 140, 208); margin-left:-20px; margin-right:-20px; padding:10px;">
        <div class="col-md-12">
            <h2 style="color:white;">Учет потребности СИЗ</h2>
        </div>
    </div>
    <br />
    @if (User.Identity.IsAuthenticated)
    {
        if (User.IsInRole("admin"))
        {
            <div class="row">
                <div class="col-md-4 col-md-offset-4">
                    @Html.ActionLink("Панель администратора", "Index", "Admin", null,
                        new { @class = "btn btn-success btn-block", @style = "max-width:280px;" })
                    <br />
                    @Html.ActionLink("Поиск по наименованию СИЗ", "SearchByPPIName", "Search", null,
                        new { @class = "btn btn-primary btn-block", @style = "max-width:280px;" })
                    <br />
                    @Html.ActionLink("Поиск по наименованию подразделения", "SearchByDepartmentName", "Search", null,
                        new { @class = "btn btn-primary btn-block", @style = "max-width:280px;" })
                </div>
            </div>
        }
        else if (User.IsInRole("structural-department-head"))
        {
            <div class="row">
                <div class="col-md-4 col-md-offset-4">
                    @Html.ActionLink("Поиск по наименованию СИЗ", "SearchByPPIName", "Search", null,
                                new { @class = "btn btn-primary btn-block", @style = "max-width:280px;" })
                    <br />
                    @Html.ActionLink("Поиск по наименованию подразделения", "SearchByDepartmentName", "Search", null,
                        new { @class = "btn btn-primary btn-block", @style = "max-width:280px;" })
                </div>
            </div>
        }
        else if (User.IsInRole("department-head"))
        {
            <div class="row">
                <div class="col-md-4 col-md-offset-4">
                    @Html.ActionLink("Оформить заявку", "CreateRequest", "Request", null,
                        new { @class = "btn btn-primary btn-block", @style = "max-width:280px;" })
                </div>
            </div>
        }
    }
    else
    {
        <div class="row text-center">
            <h2>Выполните  вход</h2>
        </div>
    }
</div>