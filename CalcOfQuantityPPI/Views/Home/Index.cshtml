@model IEnumerable<CalcOfQuantityPPI.Models.Department>
@{
    ViewBag.Title = "Home Page";
}

<div class="container"
     style="padding: 0 20px 20px 20px;
    background-color: rgb(255,255,255);
    box-shadow: rgba(0,0,0,0.5) 0 5px 20px;
    border-radius:5px;">
    <div class="row" style="background-color:rgb(0, 140, 208); margin-left:-20px; margin-right:-20px; padding:10px;">
        <div class="col-md-12">
            <h2 style="color:white;">Создание заявки</h2>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-md-4">
            @Html.Label("Выберите подразделение:")
            <br />
            <select id="parentDepartment" class="form-control">
                @foreach (var item in Model)
                {
                    <option value="@item.Id">@item.Name</option>
                }
            </select>
            <br />
            <input type="checkbox" id="isUseSubsidiaryDepartment">
            @Html.Label("Дочернее подразделение")
            <br />
            <select id="subsidiaryDepartment" class="form-control" style="display:none;"></select>
            <br />
            @Html.ActionLink("Оформить заявку", "CreateRequest", @*new { id = 1 }*@ null, new { @class = "btn btn-primary" })
        </div>
        <div class="col-md-8">
            <table id="professionsTabel" class="table table-striped"></table>
        </div>
    </div>
</div>

@section scripts{
    <script type="text/javascript"> 
        $(function () {
            updateProfessionsAndPPITable('#parentDepartment');
            updateSubsidiaryDepartmentList();
        }); 

        $('#parentDepartment').change(function () {
            updateSubsidiaryDepartmentList();
            $('#subsidiaryDepartment').hide(100);
            $('#isUseSubsidiaryDepartment').prop('checked', false);
        });

        $('#subsidiaryDepartment').change(function () {
            updateProfessionsAndPPITable('#subsidiaryDepartment');
        });

        $('#isUseSubsidiaryDepartment').click(function () {
            if ($('#isUseSubsidiaryDepartment').is(':checked')) {
                $('#subsidiaryDepartment').show(100);
                updateProfessionsAndPPITable('#subsidiaryDepartment');
            } else {
                $('#subsidiaryDepartment').hide(100);
                updateProfessionsAndPPITable('#parentDepartment');
            }
        });

        if ($('#isUseSubsidiaryDepartment').is(':checked')) {
                $('#subsidiaryDepartment').show(100);
                $('#subsidiaryDepartment').change(function () {
                    updateProfessionsAndPPITable('#subsidiaryDepartment');
                });
            } else {
                $('#subsidiaryDepartment').hide(100);
                $('#parentDepartment').change(function () {
                    updateProfessionsAndPPITable('#parentDepartment');
                });
        }

        function updateSubsidiaryDepartmentList() {
            var parentDepartmentId = $('#parentDepartment').val();
            $.ajax({
                success: function () {
                    $('#subsidiaryDepartment').load('@Url.Action("SubsidiaryDepartmentList", "Home")/' + parentDepartmentId);
                }
            });
        }

        function updateProfessionsAndPPITable(id) {
            var subsidiaryDepartmentId = $(id).val();
            $.ajax({
                success: function () {
                    $('#professionsTabel').load('@Url.Action("ProfessionsAndPPITable", "Home")/' + subsidiaryDepartmentId)
                }
            });
        }
    </script>
}