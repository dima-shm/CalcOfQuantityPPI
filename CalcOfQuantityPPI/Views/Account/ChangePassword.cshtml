@model CalcOfQuantityPPI.ViewModels.Account.ChangePasswordViewModel
@{
    ViewBag.Title = "Изменить пароль пользователя";
}

<div class="container"
     style="padding: 0 20px 20px 20px;
     background-color: rgb(255,255,255);
     box-shadow: rgba(0,0,0,0.5) 0 5px 20px;
     border-radius:5px;
     min-height:800px">
    <div class="row" style="background-color:rgb(0, 140, 208); margin-left:-20px; margin-right:-20px; padding:10px;">
        <div class="col-md-12">
            <h2 style="color:white;">@ViewData["Title"] «@Model.Login»</h2>
        </div>
    </div>
    <br />
    <form asp-action="ChangePassword" asp-controller="Account" method="post">
        <div class="row">
            <div class="col-md-6 col-md-offset-4">
                <div class="form-group">
                    @Html.Label("Логин")
                    @Html.TextBoxFor(model => model.Login, new { @class = "form-control", @readonly = "readonly" })
                </div>
                <div class="form-group">
                    @Html.Label("Новый пароль")
                    @Html.TextBoxFor(model => model.NewPassword, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    @Html.ValidationSummary(null, new { style = "color:red" })
                </div>
                <div class="form-group">
                    <div style="max-width:280px">
                        <button type="submit" class="btn btn-success btn-block">Сохранить</button>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>