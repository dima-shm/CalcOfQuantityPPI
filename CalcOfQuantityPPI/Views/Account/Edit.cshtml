@using CalcOfQuantityPPI.Models
@model CalcOfQuantityPPI.ViewModels.Account.EditViewModel
@{
    ViewBag.Title = "Изменение данных пользователя";
}

<div class="container"
     style="padding: 0 20px 20px 20px;
     background-color: rgb(255,255,255);
     box-shadow: rgba(0,0,0,0.5) 0 5px 20px;
     border-radius:5px;
     min-height:800px">
    <div class="row" style="background-color:rgb(0, 140, 208); margin-left:-20px; margin-right:-20px; padding:10px;">
        <div class="col-md-12">
            <h2 style="color:white;">@ViewData["Title"] «@Model.Name»</h2>
        </div>
    </div>
    <br />
    <form asp-action="Edit" asp-controller="Account" method="post">
        <div class="row">
            <div class="col-md-5 col-md-offset-1">
                @Html.HiddenFor(model => model.Id)
                <div class="form-group">
                    @Html.Label("Фамилия и инициалы пользователя")
                    @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    @Html.Label("Логин")
                    @Html.TextBoxFor(model => model.Login, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    @Html.ValidationSummary(null, new { style = "color:red" })
                </div>
                <div class="form-group">
                    @Html.ActionLink("Изменить пароль", "ChangePassword", "Account", null,
                        new { @class = "btn btn-block btn-info", style = "max-width:280px" })
                </div>
                <div style="max-width:280px">
                    <button type="submit" class="btn btn-success btn-block">Сохранить</button>
                </div>
            </div>
            <div class="col-md-5 col-md-offset-1">
                <div class="form-group">
                    @Html.Label("Роли пользователя:")
                    <div class="form-group">
                        @foreach (Role role in Model.AllRoles)
                        {
                            <input type="radio" name="roles" value="@role.Name" class="form-check-input"
                                   @(Model.UserRoles.Contains(role.Name) ? "checked=\"checked\"" : "") />@role.Name <br />
                        }
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>