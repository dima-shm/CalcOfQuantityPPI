@model CalcOfQuantityPPI.ViewModels.Account.LoginViewModel
@{
    ViewBag.Title = "Вход";
}

<div class="container"
     style="padding: 0 20px 20px 20px;
     background-color: rgb(255,255,255);
     box-shadow: rgba(0,0,0,0.5) 0 5px 20px;
     border-radius:5px;
     min-height:800px">
    <div class="row" style="background-color:rgb(0, 140, 208); margin-left:-20px; margin-right:-20px; padding:10px;">
        <div class="col-md-12">
            <h2 style="color:white;">@ViewData["Title"]</h2>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-md-6 col-md-offset-4">
            <form asp-action="Login" asp-controller="Account" method="post">
                <div class="form-group">
                    @Html.Label("Логин")
                    @Html.TextBoxFor(model => model.Login, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    @Html.Label("Пароль")
                    @Html.TextBoxFor(model => model.Password, new { @class = "form-control", type = "password" })
                </div>
                <div class="form-group">
                    @Html.ValidationSummary(null, new { style = "color:red" })
                </div>
                <div style="max-width:280px">
                    <button type="submit" class="btn btn-success btn-block">Вход</button>
                </div>
            </form>
        </div>
    </div>
</div>